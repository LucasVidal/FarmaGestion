<h1>New inventory</h1>

<% form_for(@inventory_template) do |f| %>
  <%= f.error_messages %>
		<div>
			  <p>
			    Nombre: 
				<%= f.text_field :name %>&nbsp;
			    Periodicidad:
				<%=	f.select (:periodicity_id, periodicities_for_select)%>
			  </p>
		</div>
  <p>
    <%= f.submit 'Listo' %>
  </p>
<% end %>

<%= link_to 'Back', inventory_templates_path %>